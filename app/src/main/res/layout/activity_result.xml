<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/design1"
        app:layout_constraintBottom_toBottomOf="@+id/infoTextView1"
        app:layout_constraintEnd_toStartOf="@+id/infoTextView1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/infoTextView1"
        app:layout_constraintVertical_bias="0.416" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/design2"
        app:layout_constraintBottom_toBottomOf="@+id/infoTextView2"
        app:layout_constraintEnd_toStartOf="@+id/infoTextView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/infoTextView2"
        app:layout_constraintVertical_bias="0.416" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/design3"
        app:layout_constraintBottom_toBottomOf="@+id/infoTextView3"
        app:layout_constraintEnd_toStartOf="@+id/infoTextView3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/infoTextView3"
        app:layout_constraintVertical_bias="0.416" />

    <ImageView
        android:id="@+id/resultImageView"
        android:layout_width="match_parent"
        android:layout_height="319dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result will be displayed here"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultImageView"
        app:layout_constraintVertical_bias="0.044" />


    <TextView
        android:id="@+id/infoTextView3"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:gravity="left|center"
        android:padding="4dp"
        android:text="Info 3"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultImageView"
        app:layout_constraintVertical_bias="0.641" />

    <TextView
        android:id="@+id/infoTextView1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:gravity="left|center"
        android:padding="4dp"
        android:text="Info 1"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultImageView"
        app:layout_constraintVertical_bias="0.184" />

    <TextView
        android:id="@+id/infoTextView2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:gravity="left|center"
        android:padding="4dp"
        android:text="Info 2"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultImageView"
        app:layout_constraintVertical_bias="0.394" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="174dp"
        android:layout_height="51dp"
        android:backgroundTint="@color/light_green"
        android:onClick="onDoneButtonClick"
        android:text="Done"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView"
        app:layout_constraintVertical_bias="0.867" />

</androidx.constraintlayout.widget.ConstraintLayout>